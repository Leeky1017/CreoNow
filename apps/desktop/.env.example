# AI provider mode for LLM + agent runs: openai | anthropic | proxy
CREONOW_AI_PROVIDER=openai

# OpenAI-compatible base URL (without hardcoding /v1 in code).
# DeepSeek example: https://api.deepseek.com
CREONOW_AI_BASE_URL=https://api.openai.com

# API key for direct provider mode.
CREONOW_AI_API_KEY=sk-your-key-here

# Optional proxy mode (set enabled=1 to route via proxy).
CREONOW_AI_PROXY_ENABLED=0
CREONOW_AI_PROXY_BASE_URL=
CREONOW_AI_PROXY_API_KEY=

# Optional request guards for long agent/skill jobs.
CREONOW_AI_TIMEOUT_MS=30000
CREONOW_AI_MAX_SKILL_OUTPUT_CHARS=12000

# Optional model pricing map used by usage accounting.
# Example:
# CREONOW_AI_MODEL_PRICING_JSON={"gpt-5.2":{"inputPer1kUsd":0.01,"outputPer1kUsd":0.03}}
CREONOW_AI_MODEL_PRICING_JSON=

# Local runtime toggles for desktop testing.
CREONOW_E2E=0
CREONOW_USER_DATA_DIR=

# Retrieval and embedding defaults used by main-process services.
CREONOW_EMBEDDING_MODEL=default
CREONOW_RAG_RERANK=0
CREONOW_RAG_RERANK_MODEL=
